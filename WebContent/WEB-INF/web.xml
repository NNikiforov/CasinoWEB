<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	<display-name>Casino</display-name>
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.epam.casino.controller.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/jsp/general/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.RuntimeException</exception-type>
		<location>/jsp/general/error.jsp</location>
	</error-page>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>by.epam.casino.controller.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>CommandFromUriFilter</filter-name>
		<filter-class>by.epam.casino.controller.CommandFromUriFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CommandFromUriFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>SecurityFilter</filter-name>
		<filter-class>by.epam.casino.controller.SecurityFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>